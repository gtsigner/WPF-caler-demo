<Window x:Class="caler.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:caler"
        mc:Ignorable="d"
        Name="result"
        Background="#FFA80707"
        IsVisibleChanged="Result_IsVisibleChanged"
        Title="Result" Height="600" Width="800">
    <!--<Window.Background>-->
        <!--<ImageBrush ImageSource="Assets/bg.jpg"></ImageBrush>
    </Window.Background>-->
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"  Name="title" FontSize="50" TextAlignment="Center" VerticalAlignment="Center" Foreground="#FFFFFF01">恭喜000号竞买人竞买成功!</TextBlock>
        <Grid Grid.Row="1">
            <Button Foreground="#FFF" Height="100" Width="200" BorderThickness="0" FontSize="60" Background="Transparent" BorderBrush="Transparent">谢谢</Button>
        </Grid>
    </Grid>
</Window>
